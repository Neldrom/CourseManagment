@model IEnumerable<CourseManagment.Models.Course>

@{
    ViewData["Title"] = "Courses";
}

<h1>Courses</h1>

<p>
    <a asp-action="CreateCourse">Create New Course</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Teacher</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Title</td>
                <td>@(course.Teacher?.UserName ?? "N/A")</td>
                <td>
                    <a asp-action="EditCourse" asp-route-id="@course.CourseId">Edit</a> |
                    <a asp-action="DeleteCourse" asp-route-id="@course.CourseId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
