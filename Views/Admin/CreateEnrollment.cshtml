@model CourseManagment.Models.CreateEnrollmentViewModel

@{
    ViewData["Title"] = "Create Enrollment";
}

<h1>Create Enrollment</h1>

<form asp-action="CreateEnrollment" method="post">
    <div class="form-group">
        <label asp-for="SelectedUserId" class="control-label">User</label>
        <select asp-for="SelectedUserId" class="form-control" asp-items="Model.Users"></select>
        <span asp-validation-for="SelectedUserId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SelectedCourseId" class="control-label">Course</label>
        <select asp-for="SelectedCourseId" class="form-control" asp-items="Model.Courses"></select>
        <span asp-validation-for="SelectedCourseId" class="text-danger"></span>
    </div>
    <input type="submit" value="Create" class="btn btn-primary" />
</form>
