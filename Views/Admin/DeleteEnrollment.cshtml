@model CourseManagment.Models.Enrollment

@{
    ViewData["Title"] = "Delete Enrollment";
}

<h1>Delete Enrollment</h1>

<h3>Are you sure you want to delete this enrollment?</h3>
<div>
    <h4>Enrollment for @Model.User.UserName in @Model.Course.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            User
        </dt>
        <dd class="col-sm-10">
            @Model.User.UserName
        </dd>
        <dt class="col-sm-2">
            Course
        </dt>
        <dd class="col-sm-10">
            @Model.Course.Title
        </dd>
    </dl>

    <form asp-action="DeleteEnrollment">
        <input type="hidden" asp-for="EnrollmentId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Enrollments" class="btn btn-secondary">Cancel</a>
    </form>
</div>
