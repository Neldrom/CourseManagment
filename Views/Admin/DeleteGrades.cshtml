@model CourseManagment.Models.Grade

@{
    ViewData["Title"] = "Delete Grade";
}

<h1>Delete Grade</h1>

<h3>Are you sure you want to delete this grade?</h3>
<div>
    <h4>Grade for @Model.Enrollment.User.UserName in @Model.Enrollment.Course.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            User
        </dt>
        <dd class="col-sm-10">
            @Model.Enrollment.User.UserName
        </dd>
        <dt class="col-sm-2">
            Course
        </dt>
        <dd class="col-sm-10">
            @Model.Enrollment.Course.Title
        </dd>
        <dt class="col-sm-2">
            Grade
        </dt>
        <dd class="col-sm-10">
            @Model.GradeValue
        </dd>
    </dl>

    <form asp-action="DeleteGrade">
        <input type="hidden" asp-for="GradeId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Grades" class="btn btn-secondary">Cancel</a>
    </form>
</div>
